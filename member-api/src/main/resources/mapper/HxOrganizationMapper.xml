<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huaxin.member.mapper.HxOrganizationMapper">

    <resultMap id="BaseResultMap" type="com.huaxin.member.model.HxOrganization">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="organization_name" property="organizationName" jdbcType="VARCHAR" />
        <result column="tel_phone" property="telPhone" jdbcType="VARCHAR" />
        <result column="describe" property="describe" jdbcType="VARCHAR" />
        <result column="contacts" property="contacts" jdbcType="VARCHAR" />
        <result column="organization_type" property="organizationType" jdbcType="VARCHAR" />
        <result column="organization_num" property="organizationNum" jdbcType="VARCHAR" />
        <result column="parent_id" property="parentId" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />

    </resultMap>
    <sql id="Base_Column_List">
		id, organization_name, tel_phone,describe,organization_type, organization_num, parent_id, create_time
	</sql>

    <select id="findList" parameterType="map" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from hx_organization
        where is_delete <![CDATA[ <> ]]> 1
        <if test="organizationName!=null and organizationName!=''">
            and organization_name  like concat('%',#{organizationName},'%')
        </if>

        order by create_time desc
    </select>


    <insert id="saveOrUpdateOrg" parameterType="map">
        replace into hx_organization(
            id,
            organization_name,
            tel_phone,
            describe,
            contacts,
            organization_type,
            organization_num,
            parent_id
        )
        values (
        #{id},
        #{organizationName},
        #{telPhone},
        #{describe},
        #{contacts},
        #{organizationType},
        #{organizationNum},
        #{parentId}
        );
    </insert>

    <delete id="deleteOrgId" parameterType="map">
        delete from hx_organization where 1=1
        <if test="ids!='' and ids!=null">
            and id  in
            <foreach collection="ids" item="id" index="index" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </if>
    </delete>

</mapper>